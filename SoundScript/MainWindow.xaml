<Window x:Class="SoundScript.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utils="clr-namespace:SoundScript.Utils"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SoundScript" 
        Height="800" 
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F0F"
        Foreground="White"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Icon="pack://application:,,,/logo.png"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Converters -->
        <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Transparent ScrollBar Style -->
        <Style x:Key="TransparentScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
            <Setter Property="Foreground" Value="Transparent" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Width="8" Background="Transparent">
                            <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="false">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="#40FFFFFF" Style="{DynamicResource ScrollBarThumbVertical}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                <Setter Value="#60FFFFFF" TargetName="Thumb" Property="Background" />
                            </Trigger>
                            <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                <Setter Value="#80FFFFFF" TargetName="Thumb" Property="Background" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ScrollBarThumbVertical" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="{TemplateBinding Background}" RadiusX="4" RadiusY="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TransparentScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" 
                                                   CanContentScroll="{TemplateBinding CanContentScroll}" 
                                                   CanHorizontallyScroll="False" 
                                                   CanVerticallyScroll="False" 
                                                   ContentTemplate="{TemplateBinding ContentTemplate}" 
                                                   Content="{TemplateBinding Content}" 
                                                   Grid.Column="0" 
                                                   Margin="{TemplateBinding Padding}" 
                                                   Grid.Row="0" />
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                      AutomationProperties.AutomationId="VerticalScrollBar" 
                                      Cursor="Arrow" 
                                      Grid.Column="1" 
                                      Maximum="{TemplateBinding ScrollableHeight}" 
                                      Minimum="0" 
                                      Grid.Row="0" 
                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" 
                                      Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                      ViewportSize="{TemplateBinding ViewportHeight}" 
                                      Style="{StaticResource TransparentScrollBar}" />
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    BlurRadius="8" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="1" 
                                    BlurRadius="4" 
                                    Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#2D2D2D" 
                        CornerRadius="12" 
                        Padding="8"
                        Margin="0,0,16,0">
                    <Image Source="pack://application:,,,/logo.png" 
                           Height="32" 
                           Width="32"/>
                </Border>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="SoundScript" 
                                  FontSize="32" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FFFFFF" 
                                  Margin="0,0,16,4"/>
                        
                        <!-- Recording Status Indicator -->
                        <Border Background="#FF4444" 
                               CornerRadius="20" 
                               Padding="12,6"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="White" Margin="0,0,8,0">
                                    <Ellipse.RenderTransform>
                                        <ScaleTransform x:Name="HeaderPulseTransform" ScaleX="1" ScaleY="1"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="HeaderPulseTransform"
                                                                   Storyboard.TargetProperty="ScaleX"
                                                                   From="1" To="1.3" Duration="0:0:0.8"
                                                                   AutoReverse="True"/>
                                                    <DoubleAnimation Storyboard.TargetName="HeaderPulseTransform"
                                                                   Storyboard.TargetProperty="ScaleY"
                                                                   From="1" To="1.3" Duration="0:0:0.8"
                                                                   AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <TextBlock Text="Recording" 
                                          Foreground="White" 
                                          FontWeight="Medium" 
                                          FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Processing Status Indicator -->
                        <Border Background="#0078D4" 
                               CornerRadius="20" 
                               Padding="12,6"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" 
                                          Foreground="White" 
                                          FontSize="12" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Processing" 
                                          Foreground="White" 
                                          FontWeight="Medium" 
                                          FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="AI-powered voice transcription" 
                              FontSize="16" 
                              Foreground="#888888"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Top-Right Control Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       Margin="0,-12,-12,0">
                <Button Content="📊" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="AnalyticsButton_Click"
                        Margin="0,0,8,0"
                        Width="40" Height="40"
                        Padding="0"
                        FontSize="16"
                        ToolTip="Analytics"
                        Background="#2D2D2D"/>
                <Button Content="⚙️" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="SettingsButton_Click"
                        Width="40" Height="40"
                        Padding="0"
                        FontSize="16"
                        ToolTip="Settings"
                        Background="#2D2D2D"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Column - Recent Activity (Expanded) -->
            <StackPanel Grid.Column="0">
                
                <!-- Recent Activity Card (Now Primary) -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FFFFFF" 
                                  Margin="0,0,0,16"/>
                        
                        <!-- History List -->
                        <Border Background="#0F0F0F" 
                                CornerRadius="8" 
                                MaxHeight="550">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                         HorizontalScrollBarVisibility="Disabled"
                                         PanningMode="Both"
                                         Style="{StaticResource TransparentScrollViewer}">
                                <StackPanel>
                                    <!-- Today Section -->
                                    <Border Background="#252525" 
                                           CornerRadius="8,8,0,0" 
                                           Padding="16,12">
                                        <TextBlock Text="TODAY" 
                                                  FontSize="12" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#888888"/>
                                    </Border>
                                    
                                    <!-- Today's Sessions -->
                                    <ItemsControl ItemsSource="{Binding TodaySessions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="Transparent" 
                                                       Padding="16,14"
                                                       BorderBrush="#2A2A2A"
                                                       BorderThickness="0,0,0,1"
                                                       x:Name="SessionBorder">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#1E1E1E"/>
                                                                    <Setter Property="BorderBrush" Value="#404040"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    
                                                    <!-- Main Content -->
                                                    <DockPanel>
                                                            <!-- Action Buttons and Stats - Docked to Right -->
                                                            <StackPanel DockPanel.Dock="Right" 
                                                                       Orientation="Horizontal"
                                                                       VerticalAlignment="Top"
                                                                       Margin="12,0,0,0">
                                                                
                                                                <!-- Stats (Always visible, compact) -->
                                                                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                                                    <Border Background="#1A1A1A" 
                                                                           CornerRadius="4" 
                                                                           Padding="6,3"
                                                                           Margin="0,0,4,0"
                                                                           BorderBrush="#333333"
                                                                           BorderThickness="1">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding WordCount}" 
                                                                                      FontSize="10" 
                                                                                      Foreground="#CCCCCC" 
                                                                                      FontWeight="Medium"/>
                                                                            <TextBlock Text="w" 
                                                                                      FontSize="10" 
                                                                                      Foreground="#888888"
                                                                                      Margin="2,0,0,0"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    
                                                                    <Border Background="#1A1A1A" 
                                                                           CornerRadius="4" 
                                                                           Padding="6,3"
                                                                           BorderBrush="#333333"
                                                                           BorderThickness="1">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding WordsPerMinute, StringFormat='{}{0:F0}'}" 
                                                                                      FontSize="10" 
                                                                                      Foreground="#CCCCCC" 
                                                                                      FontWeight="Medium"/>
                                                                            <TextBlock Text="wpm" 
                                                                                      FontSize="10" 
                                                                                      Foreground="#888888"
                                                                                      Margin="2,0,0,0"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </StackPanel>
                                                                
                                                                <!-- Action Buttons (Hidden by default) -->
                                                                <StackPanel Orientation="Horizontal"
                                                                           x:Name="ActionButtons"
                                                                           Opacity="0">
                                                                    <StackPanel.Style>
                                                                        <Style TargetType="StackPanel">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=SessionBorder}" Value="True">
                                                                                    <DataTrigger.EnterActions>
                                                                                        <BeginStoryboard>
                                                                                            <Storyboard>
                                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                                                                            </Storyboard>
                                                                                        </BeginStoryboard>
                                                                                    </DataTrigger.EnterActions>
                                                                                    <DataTrigger.ExitActions>
                                                                                        <BeginStoryboard>
                                                                                            <Storyboard>
                                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                                                            </Storyboard>
                                                                                        </BeginStoryboard>
                                                                                    </DataTrigger.ExitActions>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </StackPanel.Style>
                                                                    
                                                                    <!-- Copy Button -->
                                                                    <Button Background="#2D2D2D" 
                                                                           BorderThickness="0"
                                                                           Width="28" Height="28"
                                                                           Margin="0,0,4,0"
                                                                           ToolTip="Copy text"
                                                                           Click="CopySessionText_Click"
                                                                           Tag="{Binding}">
                                                                        <Button.Style>
                                                                            <Style TargetType="Button">
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#0078D4"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Button.Style>
                                                                        <TextBlock Text="📋" FontSize="12" Foreground="#FFFFFF"/>
                                                                    </Button>
                                                                    
                                                                    <!-- Download Audio Button -->
                                                                    <Button Background="#2D2D2D" 
                                                                           BorderThickness="0"
                                                                           Width="28" Height="28"
                                                                           ToolTip="Download audio"
                                                                           Click="DownloadAudio_Click"
                                                                           Tag="{Binding}"
                                                                           Visibility="{Binding HasAudioData, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                        <Button.Style>
                                                                            <Style TargetType="Button">
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#107C10"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Button.Style>
                                                                        <TextBlock Text="⬇️" FontSize="12" Foreground="#FFFFFF"/>
                                                                    </Button>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            
                                                            <!-- Time - Docked to Left -->
                                                            <TextBlock DockPanel.Dock="Left" 
                                                                      Text="{Binding Timestamp, StringFormat='{}{0:h:mm tt}'}" 
                                                                      FontSize="12" 
                                                                      Foreground="#999999" 
                                                                      Width="65"
                                                                      VerticalAlignment="Top"
                                                                      Margin="0,2,16,0"/>
                                                            
                                                            <!-- Content - Fills remaining space -->
                                                            <TextBlock Text="{Binding PreviewText}" 
                                                                      FontSize="14" 
                                                                      Foreground="#E0E0E0" 
                                                                      TextWrapping="Wrap"
                                                                      LineHeight="20"
                                                                      Margin="0,0,8,0"/>
                                                                                                            </DockPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- Load More Button -->
                                    <Button Content="Load more sessions..." 
                                           Background="Transparent"
                                           Foreground="#888888"
                                           BorderThickness="0"
                                           Padding="16,14"
                                           FontSize="13"
                                           Command="{Binding LoadMoreSessionsCommand}"
                                           HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1A1A1A"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Column - Collapsible Stats Panel -->
            <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                <StackPanel>
                    <!-- Stats Header with Expand/Collapse -->
                    <Button x:Name="StatsToggleButton" 
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            Click="StatsToggleButton_Click"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                      Text="Statistics" 
                                      FontSize="20" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF"
                                      HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1"
                                      x:Name="StatsToggleIcon"
                                      Text="▼" 
                                      FontSize="14" 
                                      Foreground="#888888"
                                      RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform x:Name="StatsToggleRotation" Angle="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Button>

                    <!-- Stats Content (Collapsible) -->
                    <StackPanel x:Name="StatsContent">
                        
                        <!-- Quick Stats Summary -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalSessions}" 
                                              FontSize="24" 
                                              FontWeight="Bold" 
                                              Foreground="#0078D4"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Sessions" 
                                              FontSize="11" 
                                              Foreground="#CCCCCC"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="4,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding AverageWPM, StringFormat='{}{0:F0}'}" 
                                              FontSize="24" 
                                              FontWeight="Bold" 
                                              Foreground="#107C10"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Avg WPM" 
                                              FontSize="11" 
                                              Foreground="#CCCCCC"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Detailed Stats -->
                        <TextBlock Text="Details" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FFFFFF" 
                                  Margin="0,8,0,12"/>

                        <!-- Total Words -->
                        <Border Style="{StaticResource StatCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
                                        Background="#0078D4" 
                                        CornerRadius="6" 
                                        Width="32" Height="32"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📝" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalWords}" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Foreground="#FFFFFF"/>
                                    <TextBlock Text="Total Words" 
                                              FontSize="12" 
                                              Foreground="#888888"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Recording Time -->
                        <Border Style="{StaticResource StatCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
                                        Background="#FF8C00" 
                                        CornerRadius="6" 
                                        Width="32" Height="32"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="⏱️" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalRecordingTime}" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Foreground="#FFFFFF"/>
                                    <TextBlock Text="Recording Time" 
                                              FontSize="12" 
                                              Foreground="#888888"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Instructions Card -->
                        <Border Background="#1F1F1F" 
                               CornerRadius="8" 
                               Padding="16" 
                               Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="💡 Quick Guide" 
                                          FontSize="14" 
                                          FontWeight="SemiBold" 
                                          Foreground="#FFFFFF" 
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="• Hold Ctrl+Win to record" 
                                          FontSize="12" 
                                          Foreground="#CCCCCC" 
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="• Release to transcribe" 
                                          FontSize="12" 
                                          Foreground="#CCCCCC" 
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="• Text auto-pastes to active app" 
                                          FontSize="12" 
                                          Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Analytics Section (Collapsible) -->
        <Border Grid.Row="2" 
                x:Name="AnalyticsSection"
                Style="{StaticResource ModernCardStyle}"
                Margin="0,24,0,0"
                Visibility="Collapsed">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                              Text="📊 Analytics &amp; Insights" 
                              FontSize="24" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFF"/>
                    
                    <Button Grid.Column="1"
                            x:Name="AnalyticsCloseButton"
                            Content="✕"
                            Background="Transparent"
                            Foreground="#888888"
                            BorderThickness="0"
                            FontSize="16"
                            Padding="8"
                            Click="AnalyticsButton_Click"
                            ToolTip="Close Analytics"/>
                </Grid>

                <!-- Analytics Content Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Speaking Pace Analysis -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🗣️ Speaking Pace" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" 
                                      Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Current Avg:" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Column="1" Text="{Binding AverageWPM, StringFormat='{}{0:F0} WPM'}" 
                                          FontSize="12" FontWeight="SemiBold" Foreground="#0078D4"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Target Range:" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Column="1" Text="150-180 WPM" FontSize="12" Foreground="#888888"/>
                            </Grid>
                            
                            <!-- Simple Progress Bar for WPM -->
                            <Border Background="#333333" CornerRadius="4" Height="8" Margin="0,8,0,0">
                                <Border Background="#0078D4" 
                                       CornerRadius="4" 
                                       HorizontalAlignment="Left"
                                       Width="{Binding WPMProgressWidth}"/>
                            </Border>
                            <TextBlock Text="Speaking pace trend" FontSize="10" Foreground="#888888" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Most Used Words -->
                    <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="💬 Most Used Words" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" 
                                      Margin="0,0,0,12"/>
                            
                            <ScrollViewer MaxHeight="120" 
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Style="{StaticResource TransparentScrollViewer}"
                                         PanningMode="Both">
                                <ItemsControl ItemsSource="{Binding TopWords}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Word}" 
                                                          FontSize="12" Foreground="#FFFFFF"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Count}" 
                                                          FontSize="12" Foreground="#0078D4" FontWeight="SemiBold"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <TextBlock Text="Based on recent sessions" FontSize="10" Foreground="#888888" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Usage Reports -->
                    <Border Grid.Column="4" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📈 Usage Reports" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF" 
                                      Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Today:" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Column="1" Text="{Binding TodaySessionCount}" 
                                          FontSize="12" FontWeight="SemiBold" Foreground="#107C10"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="This Week:" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Column="1" Text="{Binding WeekSessionCount}" 
                                          FontSize="12" FontWeight="SemiBold" Foreground="#0078D4"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Accuracy:" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Column="1" Text="{Binding AverageAccuracy, StringFormat='{}{0:F1}%'}" 
                                          FontSize="12" FontWeight="SemiBold" Foreground="#FF8C00"/>
                            </Grid>
                            
                            <TextBlock Text="📊 Improvement: +12% this week" 
                                      FontSize="11" 
                                      Foreground="#107C10" 
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Status Bar Removed -->
    </Grid>
</Window>
