<Application x:Class="SoundScript.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SoundScript"
             xmlns:utils="clr-namespace:SoundScript.Utils"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Basic converters without Material Design for now -->
            <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <utils:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <utils:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>
            
            <!-- Basic dark theme colors -->
            <SolidColorBrush x:Key="PrimaryBackground" Color="#1e1e1e"/>
            <SolidColorBrush x:Key="SecondaryBackground" Color="#2d2d30"/>
            <SolidColorBrush x:Key="PrimaryText" Color="#ffffff"/>
            <SolidColorBrush x:Key="SecondaryText" Color="#cccccc"/>
            <SolidColorBrush x:Key="AccentColor" Color="#007acc"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
