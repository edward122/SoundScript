<Window x:Class="SoundScript.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SoundScript Settings" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a"
        Foreground="White"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Icon="pack://application:,,,/logo.png">

    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32" Orientation="Horizontal">
            <Image Source="pack://application:,,,/logo.png" 
                   Height="32" 
                   Width="32"
                   Margin="0,0,12,0"
                   VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="âš™ï¸ Settings" 
                         FontSize="32" 
                         FontWeight="Light"
                         Foreground="#ffffff"
                         Margin="0,0,0,8"/>
                <TextBlock Text="Configure your API keys and preferences"
                         FontSize="16"
                         Foreground="#888888"/>
            </StackPanel>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- API Keys Section -->
                <Border Background="#2a2a2a"
                      CornerRadius="12"
                      Padding="24"
                      Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ”‘ API Keys" 
                                 FontSize="20" 
                                 FontWeight="Medium"
                                 Foreground="#ffffff"
                                 Margin="0,0,0,20"/>

                        <!-- OpenAI API Key -->
                        <TextBlock Text="OpenAI API Key (for Whisper transcription):"
                                 Foreground="#ffffff"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <PasswordBox x:Name="OpenAiKeyBox"
                                   Background="#1a1a1a"
                                   Foreground="#ffffff"
                                   Padding="12,10"
                                   Margin="0,0,0,20"
                                   BorderBrush="#4a9eff"
                                   BorderThickness="1"
                                   FontSize="14"/>

                        <!-- Gemini API Key -->
                        <TextBlock Text="Google Gemini API Key (for text polishing):"
                                 Foreground="#ffffff"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <PasswordBox x:Name="GeminiKeyBox"
                                   Background="#1a1a1a"
                                   Foreground="#ffffff"
                                   Padding="12,10"
                                   Margin="0,0,0,20"
                                   BorderBrush="#4a9eff"
                                   BorderThickness="1"
                                   FontSize="14"/>

                        <!-- API Key Help -->
                        <TextBlock Text="ðŸ’¡ Get your keys from:"
                                 Foreground="#888888"
                                 FontSize="13"
                                 Margin="0,0,0,8"/>
                        <TextBlock Foreground="#888888"
                                 FontSize="13">
                            <Run Text="â€¢ OpenAI: "/>
                            <Hyperlink NavigateUri="https://platform.openai.com/api-keys" 
                                     RequestNavigate="Hyperlink_RequestNavigate"
                                     Foreground="#4a9eff">
                                platform.openai.com/api-keys
                            </Hyperlink>
                            <LineBreak/>
                            <Run Text="â€¢ Gemini: "/>
                            <Hyperlink NavigateUri="https://aistudio.google.com/app/apikey" 
                                     RequestNavigate="Hyperlink_RequestNavigate"
                                     Foreground="#4a9eff">
                                aistudio.google.com/app/apikey
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Behavior Settings -->
                <Border Background="#2a2a2a"
                      CornerRadius="12"
                      Padding="24"
                      Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="âš¡ Behavior" 
                                 FontSize="20" 
                                 FontWeight="Medium"
                                 Foreground="#ffffff"
                                 Margin="0,0,0,20"/>

                        <!-- Performance Settings -->
                        <TextBlock Text="Performance" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FFFFFF" 
                                  Margin="0,20,0,10"/>
                        
                        <CheckBox x:Name="AutoPasteCheckBox"
                                 Content="Auto-paste results after transcription"
                                 Foreground="#CCCCCC"
                                 Margin="0,5"/>
                        
                        <CheckBox x:Name="SkipPolishingCheckBox"
                                 Content="Skip text polishing for maximum speed (raw transcription only)"
                                 Foreground="#CCCCCC"
                                 Margin="0,5"/>
                        
                        <CheckBox x:Name="RealTimeProcessingCheckBox"
                                 Content="Enable real-time processing"
                                 Foreground="#CCCCCC"
                                 Margin="0,5"/>

                        <!-- Max Retries -->
                        <TextBlock Text="Max Retries" 
                                  FontSize="14" 
                                  Foreground="#CCCCCC" 
                                  Margin="0,15,0,5"/>
                        <TextBox x:Name="MaxRetriesTextBox"
                                 Grid.Column="1"
                                 Margin="10,0,0,0"
                                 Background="#3A3A3A"
                                 Foreground="White"
                                 BorderBrush="#555555"
                                 Height="35"
                                 Padding="8,0"
                                 VerticalContentAlignment="Center"
                                 Text="3"/>
                    </StackPanel>
                </Border>

                <!-- Model Settings -->
                <Border Background="#2a2a2a"
                      CornerRadius="12"
                      Padding="24"
                      Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ¤– Models" 
                                 FontSize="20" 
                                 FontWeight="Medium"
                                 Foreground="#ffffff"
                                 Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Whisper model:"
                                     Foreground="#ffffff"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Width="140"/>
                            <ComboBox x:Name="WhisperModelComboBox" 
                                      Grid.Column="1"
                                      Margin="10,0,0,0"
                                      Background="#3A3A3A"
                                      Foreground="White"
                                      BorderBrush="#555555"
                                      Height="35">
                                <ComboBoxItem Content="whisper-1"/>
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#3A3A3A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#555555"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <ToggleButton Name="ToggleButton" 
                                                                     Background="{TemplateBinding Background}"
                                                                     BorderBrush="{TemplateBinding BorderBrush}"
                                                                     BorderThickness="{TemplateBinding BorderThickness}"
                                                                     Focusable="False"
                                                                     IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                     ClickMode="Press">
                                                            <ToggleButton.Template>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                           BorderBrush="{TemplateBinding BorderBrush}" 
                                                                           BorderThickness="{TemplateBinding BorderThickness}">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition />
                                                                                <ColumnDefinition Width="20" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <ContentPresenter Grid.Column="0" 
                                                                                            Margin="8,0,0,0" 
                                                                                            VerticalAlignment="Center" 
                                                                                            HorizontalAlignment="Left"/>
                                                                            <Path Grid.Column="1" 
                                                                                 HorizontalAlignment="Center" 
                                                                                 VerticalAlignment="Center" 
                                                                                 Data="M 0 0 L 4 4 L 8 0 Z" 
                                                                                 Fill="White"/>
                                                                        </Grid>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </ToggleButton.Template>
                                                        </ToggleButton>
                                                        <ContentPresenter Name="ContentSite" 
                                                                         IsHitTestVisible="False" 
                                                                         Content="{TemplateBinding SelectionBoxItem}" 
                                                                         ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                                         ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                                                         Margin="8,3,23,3" 
                                                                         VerticalAlignment="Center" 
                                                                         HorizontalAlignment="Left"/>
                                                        <Popup Name="Popup" 
                                                              Placement="Bottom" 
                                                              IsOpen="{TemplateBinding IsDropDownOpen}" 
                                                              AllowsTransparency="True" 
                                                              Focusable="False" 
                                                              PopupAnimation="Slide">
                                                            <Grid Name="DropDown" 
                                                                 SnapsToDevicePixels="True" 
                                                                 MinWidth="{TemplateBinding ActualWidth}" 
                                                                 MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                <Border Background="#3A3A3A" 
                                                                       BorderThickness="1" 
                                                                       BorderBrush="#555555"/>
                                                                <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                </ScrollViewer>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#3A3A3A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Background" Value="#4A90E2"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#4A90E2"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Gemini model:"
                                     Foreground="#ffffff"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Width="140"/>
                            <ComboBox x:Name="GeminiModelComboBox"
                                      Grid.Column="1"
                                      Margin="10,0,0,0"
                                      Background="#3A3A3A"
                                      Foreground="White"
                                      BorderBrush="#555555"
                                      Height="35">
                                <ComboBoxItem Content="gemini-2.0-flash-exp"/>
                                <ComboBoxItem Content="gemini-1.5-flash"/>
                                <ComboBoxItem Content="gemini-1.5-pro"/>
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#3A3A3A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#555555"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <ToggleButton Name="ToggleButton" 
                                                                     Background="{TemplateBinding Background}"
                                                                     BorderBrush="{TemplateBinding BorderBrush}"
                                                                     BorderThickness="{TemplateBinding BorderThickness}"
                                                                     Focusable="False"
                                                                     IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                     ClickMode="Press">
                                                            <ToggleButton.Template>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                           BorderBrush="{TemplateBinding BorderBrush}" 
                                                                           BorderThickness="{TemplateBinding BorderThickness}">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition />
                                                                                <ColumnDefinition Width="20" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <ContentPresenter Grid.Column="0" 
                                                                                            Margin="8,0,0,0" 
                                                                                            VerticalAlignment="Center" 
                                                                                            HorizontalAlignment="Left"/>
                                                                            <Path Grid.Column="1" 
                                                                                 HorizontalAlignment="Center" 
                                                                                 VerticalAlignment="Center" 
                                                                                 Data="M 0 0 L 4 4 L 8 0 Z" 
                                                                                 Fill="White"/>
                                                                        </Grid>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </ToggleButton.Template>
                                                        </ToggleButton>
                                                        <ContentPresenter Name="ContentSite" 
                                                                         IsHitTestVisible="False" 
                                                                         Content="{TemplateBinding SelectionBoxItem}" 
                                                                         ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                                         ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                                                         Margin="8,3,23,3" 
                                                                         VerticalAlignment="Center" 
                                                                         HorizontalAlignment="Left"/>
                                                        <Popup Name="Popup" 
                                                              Placement="Bottom" 
                                                              IsOpen="{TemplateBinding IsDropDownOpen}" 
                                                              AllowsTransparency="True" 
                                                              Focusable="False" 
                                                              PopupAnimation="Slide">
                                                            <Grid Name="DropDown" 
                                                                 SnapsToDevicePixels="True" 
                                                                 MinWidth="{TemplateBinding ActualWidth}" 
                                                                 MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                <Border Background="#3A3A3A" 
                                                                       BorderThickness="1" 
                                                                       BorderBrush="#555555"/>
                                                                <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                </ScrollViewer>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#3A3A3A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Background" Value="#4A90E2"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#4A90E2"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Data Management Section -->
                <Border Background="#2a2a2a"
                      CornerRadius="12"
                      Padding="24">
                    <StackPanel>
                        <TextBlock Text="ðŸ—‚ï¸ Data Management" 
                                 FontSize="20" 
                                 FontWeight="Medium"
                                 Foreground="#ffffff"
                                 Margin="0,0,0,20"/>

                        <TextBlock Text="âš ï¸ Danger Zone" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF6B6B" 
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="This will permanently delete all your transcription sessions, statistics, and history. This action cannot be undone."
                                 Foreground="#CCCCCC"
                                 FontSize="13"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CheckUpdatesButton"
                                  Content="ðŸ”„ Check for Updates"
                                  Padding="16,10"
                                  Background="#0078D4"
                                  Foreground="White"
                                  BorderThickness="0"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Click="CheckUpdatesButton_Click"
                                  Margin="0,0,12,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#106EBE"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#005A9E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button x:Name="ClearAllDataButton"
                                  Content="ðŸ—‘ï¸ Clear All Data"
                                  Padding="16,10"
                                  Background="#FF4444"
                                  Foreground="White"
                                  BorderThickness="0"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Click="ClearAllDataButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF4444"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6666"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#CC3333"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right"
                  Margin="0,24,0,0">
            
            <Button x:Name="TestButton"
                  Content="ðŸ§ª Test APIs"
                  Padding="16,10"
                  Margin="0,0,12,0"
                  Background="#333333"
                  Foreground="#cccccc"
                  BorderThickness="0"
                  FontSize="14"
                  Click="TestButton_Click"/>
            
            <Button x:Name="CancelButton"
                  Content="Cancel"
                  Padding="16,10"
                  Margin="0,0,12,0"
                  Background="#333333"
                  Foreground="#cccccc"
                  BorderThickness="0"
                  FontSize="14"
                  Click="CancelButton_Click"/>
            
            <Button x:Name="SaveButton"
                  Content="ðŸ’¾ Save Settings"
                  Padding="16,10"
                  Background="#4a9eff"
                  Foreground="White"
                  BorderThickness="0"
                  FontSize="14"
                  FontWeight="Medium"
                  Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 